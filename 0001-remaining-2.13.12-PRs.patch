+        |  class Inner
+        |}
+        |class A2""".stripMargin
+    val srcB = "import abc.A; import abc.A.Inner; class B"
+    val srcC = "import abc.{A, A2}; class C"
+    val srcD = "import abc.{A2 => Foo}; class D"
